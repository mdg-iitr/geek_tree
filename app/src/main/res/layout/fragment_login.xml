<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="Login">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <EditText
                android:id="@+id/editEmail_signInFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Enter registered email"
                android:inputType="textEmailAddress"/>

        <EditText
                android:id="@+id/editPassword_signInFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="Enter password"
                android:inputType="textPassword"/>

        <Button
                android:id="@+id/signInButton_SignInFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="SignIn"/>

        <TextView
                android:id="@+id/textView_SignInFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"/>

        <TextView
                android:id="@+id/proceedToSignUpTextView_SignInFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:text="Don't have an account?\nClick here to create one."
                android:textColor="@color/link_color"/>
    </LinearLayout>

</ScrollView>
