<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="user" type="com.codaira.geektree.model.User"/>
    </data>
    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  tools:context=".destination_profile"
                  android:orientation="vertical">


        <TextView
                android:layout_width="454dp"
                android:layout_height="32dp" android:id="@+id/text_toast_profile"/>
        <ImageView
                android:src="@drawable/ic_baseline_person_24px"
                android:layout_width="match_parent"
                android:layout_height="63dp" android:id="@+id/image_profile"
                android:layout_gravity="center"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp" android:id="@+id/text_name_profile"
                android:layout_gravity="center"
                android:text="@{user.name}" android:textSize="30sp" android:textStyle="bold"
                android:textAlignment="center"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" >
            <EditText
                    android:layout_width="341dp"
                    android:layout_height="37dp" android:id="@+id/text_branch_profile"
                    android:layout_gravity="center"
                    android:text="@{user.branch}" android:textSize="30sp" android:textStyle="bold"
                    android:textAlignment="center" android:hint="Branch"/>  <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true" app:srscCompat="@drawable/ic_baseline_create_24px"
                android:id="@+id/floatingActionButton1"/></LinearLayout>
          <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
              <EditText
                      android:layout_width="343dp"
                      android:layout_height="37dp" android:id="@+id/text_year_profile"
                      android:layout_gravity="center"
                      android:text="@{user.year}" android:textSize="30sp" android:textStyle="bold"
                      android:textAlignment="center" android:hint="year"/>  <com.google.android.material.floatingactionbutton.FloatingActionButton
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:clickable="true" app:src="@drawable/ic_baseline_create_24px"
                  android:id="@+id/floatingActionButton2"/></LinearLayout>
        <TabHost
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        android:id="@+id/tabhost">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"/>

                <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                            android:id="@+id/details"
                            android:transitionName="Details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="8dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="37dp"
                                  android:text="@{user.username}" android:id="@+id/text_username_profile"
                                  android:textAppearance="@style/TextAppearance.AppCompat.Button" android:textSize="24sp"
                                  android:textStyle="bold" android:textAlignment="center" android:textAllCaps="false"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="37dp"
                                  android:text="@{user.email}" android:id="@+id/text_email_profile"
                                  android:textAppearance="@style/TextAppearance.AppCompat.Button"
                                  android:textAlignment="center" android:textStyle="bold" android:textSize="24sp"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" >
                        <EditText android:layout_width="341dp" android:layout_height="37dp"
                                  android:text="@{user.phoneNumber}" android:id="@+id/text_number_profile"
                                  android:textAppearance="@style/TextAppearance.AppCompat.Button"
                                  android:textAlignment="center" android:textStyle="bold" android:textSize="24sp"
                                  android:hint="Phone Number"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true" android:src="@drawable/ic_baseline_create_24px"
                                android:id="@+id/floatingActionButton3" android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" >
                        <EditText android:layout_width="342dp" android:layout_height="37dp"
                                  android:text="@{user.linkedin}" android:id="@+id/text_linkedin_profile"
                                  android:textAppearance="@style/TextAppearance.AppCompat.Button"
                                  android:textSize="24sp"
                                  android:textAlignment="center" android:hint="linked in link"/><com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true" app:src="@drawable/ic_baseline_create_24px"
                            android:id="@+id/floatingActionButton4"/></LinearLayout>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" >
                        <EditText android:layout_width="343dp" android:layout_height="37dp"
                                  android:text="@{user.fb}" android:id="@+id/text_fb_profile"
                                  android:textAppearance="@style/TextAppearance.AppCompat.Button"
                                  android:textSize="24sp"
                                  android:textStyle="bold" android:textAlignment="center"
                                  android:hint="facebook id link"/><com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true" app:src="@drawable/ic_baseline_create_24px"
                            android:id="@+id/floatingActionButton5"/></LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                            android:id="@+id/Interests"
                            android:transitionName="Interests"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <ListView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                        android:id="@+id/list_interest_profile"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>
</layout>
